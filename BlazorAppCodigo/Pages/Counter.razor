@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>


<p role="status">Current count: @contador</p>
@foreach (var item in numeros)
{
    <p role="status">@item</p>
}

<button class="btn btn-primary" @onclick="Aumentar">Click me +</button>
<button class="btn btn-primary" @onclick="Disminuir">Click me -</button>
<button class="btn btn-primary" @onclick="Disminuir">Agregar</button>

@code {
    private int contador = 0;
    private List<int> numeros = new List<int>();

    private void Aumentar()
    {
        numeros.Add(2);
        contador++;
    }

    private void Disminuir()
    {
        contador--;
    }
}
